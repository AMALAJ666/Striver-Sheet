public class Solution {
    public static void numberCrown(int n) {
        int space=2*n+1;
      for(int i=1;i<=n;i++){
          
          for(int j=1;j<=i;j++){
              System.out.print(j+" ");
          }
          for(int k=0;k<=space;k++){
              System.out.print(" ");
          }
          space=space-2;
          for(int x=i;x>=1;x--){
              System.out.print(" "+x);
          }
          System.out.println();
      }
    }
}
